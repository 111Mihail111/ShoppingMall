@using ShoppingMall.ViewModels
@using ShoppingMall.Helpers

@model IEnumerable<StoreCategoryByTypesVM>

@{
    ViewBag.Title = "AddShops";
    Layout = "~/Views/_CustomTemplate.cshtml";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb" style="background-color: #fcfbfb; font-size: 18px;">
                <li class="breadcrumb-item">
                    @Html.ActionLink(" ", "Index", "Home", null, new { @class = "fa fa-home mt-2", @style = "color: grey; font-size: 20px; text-decoration: none" })
                </li>
                <li class="breadcrumb-item active" aria-current="page" style="margin-top: 10px; color: grey">Добавить интернет-магазин</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h1 class="ml-3 mb-4" style="font-size: 24px">
            Добавление интернет-магазина
        </h1>
    </div>
</div>

<div class="row mb-5">

    <div class="col-3"></div>

    <div class="col-6" style="border: 1px solid #e2e2e2; background-color: #F1F1F1">

        <div class="row mt-4">
            <div class="col-12">Ссылка на основной домен:</div>
        </div>

        <div class="row">
            <div class="col-12">
                @Html.TextBox(" ", null, new { @class = "form-control mt-2", @style = "border-radius: 0px" })
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">Название</div>
        </div>

        <div class="row">
            <div class="col-12">
                @Html.TextBox(" ", null, new { @class = "form-control mt-2", @style = "border-radius: 0px" })
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">Логотип</div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                ---
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">Описание</div>
        </div>

        <div class="row">
            <div class="col-12">
                <div>
                    @Html.TextArea(" ", new { @style = "max-height: 200px; min-height: 25px;", @rows = "12", @class = "mt-2", @cols = "82" })
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">Категории</div>
        </div>

        <div class="row mt-4">
            <div class="col-12">

                <div id="Category" style="background-color: white; width: auto; height: auto; min-height: 40px; border: 1px solid #ced4da" tabindex="-1" onclick="DropDownListVisible(this)">
                    
                    <input id="Search" class="ml-2" style="height: 40px; border: none" onclick="DropDownListVisible(this)" />
                </div>

                <div id="DropDownList" class="row invisibly">
                    <div class="col-12">

                        <div style="height: 200px; overflow: auto; overflow-x: hidden">
                            <div style="background-color: white; border: 1px solid #ced4da;">

                                @if (Model != null)
                                {
                                    <ul>
                                        @foreach (var item in Model)
                                        {
                                            <li class="mt-3 ml-3" style="font-weight: bold">@item.TypeCategoryName</li>

                                            foreach (var element in item.CategoryStores)
                                            {
                                                <li id="CategoryStore" class="ml-4 mt-2" onmousedown="AddTagByList(this)">@element.CategoryName</li>
                                            }

                                        }
                                    </ul>
                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-5">
                        Телефон
                    </div>
                    <div class="col-5 text-right">
                        <i class="fa fa-question-circle" aria-hidden="true" title="Основной телефон интернет-магазина (для приёма заказов из любых городов)"></i>
                    </div>
                </div>

                <div id="ContainerPhone">
                    <div id="Element" class="row">
                        <div class="col-10">
                            @Html.TextBox("UserControl2[0].Phone", null, new { @class = "form-control mt-2", @style = "border-radius: 0px", @id = "Phone" })
                        </div>

                        <div class="col-2">
                            <button id="bPhone" onclick="ChangedButton(this)" class="btn mt-1" style="width: 43px; height: 43px; background-color: #fcfbfb; border-radius: 100%; border: 1px solid #e1e1e1;">
                                <span style="font-size: 21px; font-weight: 700;">+</span>
                            </button>
                        </div>

                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-5">Email</div>
                    <div class="col-5 text-right">
                        <i class="fa fa-question-circle" aria-hidden="true" title="Основной email интернет-магазина (для приёма заказов из любых городов)"></i>
                    </div>
                </div>

                <div id="ContainerEmail">
                    <div id="Element" class="row">
                        <div class="col-10">
                            @Html.TextBox("UserControl2[0].Email", null, new { @class = "form-control mt-2", @style = "border-radius: 0px", @id = "Email" })
                        </div>

                        <div class="col-2">
                            <button id="bEmail" onclick="ChangedButton(this)" class="btn mt-1" style="width: 43px; height: 43px; background-color: #fcfbfb; border-radius: 100%; border: 1px solid #e1e1e1;">
                                <span style="font-size: 21px; font-weight: 700;">+</span>
                            </button>
                        </div>
                    </div>
                </div>

                @*БЛОК ДОПОЛНИТЕЛЬНОЙ ИНФОРМАЦИИ*@
                <div id="PanelContainer">
                    <div id="Panel" class="row">
                        <div class="col-12 mt-4">
                            <div class="mb-4" style="border: 1px dashed #999; background-color: #e5e5e5;">
                                <div class="row" style="margin-left: 10px; margin-right: 10px">
                                    <div class="col-12">

                                        <div class="row mt-4">
                                            <div class="col-6">Город</div>
                                            <div class="col-6 text-right">
                                                <i class="fa fa-question-circle" aria-hidden="true" title="Пожалуйста, выбирайте только тот город/города, где у вас есть собственные пункты выдачи."></i>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-12">
                                                @Html.TextBox(" ", null, new { @class = "form-control mt-2", @style = "border-radius: 0px" })
                                            </div>
                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-6">Региональный поддомен</div>
                                            <div class="col-6 text-right">
                                                <i class="fa fa-question-circle" aria-hidden="true" title="Если ваш сайт разделен на региональные поддомены - укажите ссылку на поддомен текущего города."></i>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-12">
                                                @Html.TextBox(" ", null, new { @class = "form-control mt-2", @style = "border-radius: 0px" })
                                            </div>
                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-5">Адрес</div>
                                            <div class="col-5 text-right">
                                                <i class="fa fa-question-circle" aria-hidden="true" title="Указывайте адреса только собственных пунктов выдачи. Магазины с адресами транспортных компаний будут отклоняться на этапе модерации."></i>
                                            </div>
                                        </div>

                                        <div id="ContainerAddress">
                                            <div id="Element" class="row">
                                                <div class="col-10">
                                                    @Html.TextBox("UserControl2[0].Address", null, new { @class = "form-control mt-2", @style = "border-radius: 0px", @id = "Address", @placeholder = "Улица, дом, офис ..." })
                                                </div>

                                                <div class="col-2">
                                                    <button id="bAddress" onclick="ChangedButton(this)" class="btn mt-1" style="width: 43px; height: 43px; background-color: #fcfbfb; border-radius: 100%; border: 1px solid #e1e1e1;">
                                                        <span style="font-size: 21px; font-weight: 700;">+</span>
                                                    </button>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-5">Телефон</div>
                                            <div class="col-5 text-right">
                                                <i class="fa fa-question-circle" aria-hidden="true" title="Телефон регионального пункта выдачи. Дублировать здесь основной телефон не нужно."></i>
                                            </div>
                                        </div>

                                        <div id="ContainerRegionPhone">
                                            <div id="Element" class="row">

                                                <div class="col-10">
                                                    @Html.TextBox("UserControl2[0].RegionPhone", null, new { @class = "form-control mt-2", @style = "border-radius: 0px", @id = "RegionPhone" })
                                                </div>

                                                <div class="col-2">
                                                    <button id="bRegionPhone" onclick="ChangedButton(this)" class="btn mt-1" style="width: 43px; height: 43px; background-color: #fcfbfb; border-radius: 100%; border: 1px solid #e1e1e1;">
                                                        <span style="font-size: 21px; font-weight: 700;">+</span>
                                                    </button>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-5">Email</div>
                                            <div class="col-5 text-right">
                                                <i class="fa fa-question-circle" aria-hidden="true" title="Email регионального пункта выдачи. Дублировать здесь основной email не нужно."></i>
                                            </div>
                                        </div>

                                        <div id="ContainerRegionEmail">
                                            <div id="Element" class="row">
                                                <div class="col-10">
                                                    @Html.TextBox("UserControl2[0].RegionEmail", null, new { @class = "form-control mt-2", @style = "border-radius: 0px", @id = "RegionEmail" })
                                                </div>

                                                <div class="col-2">
                                                    <button id="bRegionEmail" onclick="ChangedButton(this)" class="btn mt-1" style="width: 43px; height: 43px; background-color: #fcfbfb; border-radius: 100%; border: 1px solid #e1e1e1;">
                                                        <span style="font-size: 21px; font-weight: 700;">+</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mt-4 mb-4">
                                            <div class="col-10">
                                                <button id="bAddNewCity" onclick="AddNewPanel(this)" class="btn btn-block" style="background-color: #f8f8f8; border-radius: 10px">
                                                    <span style="font-weight: 600; font-size: 20px">+ Добавить еще город</span>
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button class="btn btn-block btn-lg mb-4" style="background-color: red">
                            <span class="text-white">Отправить</span>
                        </button>
                    </div>
                </div>




                <div class="col-3"></div>
            </div>
        </div>
    </div>
</div>